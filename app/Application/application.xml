<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="Nativescript App" class="actionBar"/>
    </Page.actionBar>
    <TabView id="tabView1" cssClass="tabViewItem" tabsBackgroundColor="#000000" selectedColor="#48BAEC">
        <TabView.items>
            <TabViewItem title="Home">
                <TabViewItem.view>
                    <Label text="Home" />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Sensoren">
                <TabViewItem.view>
                    <StackLayout>
                        <Button tap="geolocation" text="Location" cssClass="enabled" />
                        <Button tap="accelerometer" text="Accelerometer" cssClass="enabled" />
                        <Button tap="gyroscope" text="Gyroscope" isEnabled="false" cssClass="disabled" />
                        <Button tap="magnetometer" text="Magnetometer" isEnabled="false" cssClass="disabled" />
                        <Button tap="touchId" text="TouchID" cssClass="enabled" />
                        <Button tap="proximitySensor" text="Proximity Sensor" isEnabled="false" cssClass="disabled" />
                        <Button tap="ambientLight" text="Ambient Light" isEnabled="false" cssClass="disabled" />
                        <Button tap="moistureSensor" text="Moisture Sensor" isEnabled="false" cssClass="disabled" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Actuatoren">
                <TabViewItem.view>
                    <StackLayout>
                        <Button tap="vibrate" text="Vibrate" cssClass="enabled" />
                        <Button tap="bluetooth" text="Check bluetooth" cssClass="enabled" />
                        <Button tap="camera" text="Camera" cssClass="enabled" />
                        <Button tap="connectionCheck" text="Connection type" cssClass="enabled" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="UserInterface">
                <TabViewItem.view>
                    <StackLayout>
                        <Button tap="alert" text="Alert" cssClass="enabled" />
                        <Button tap="activityIndicator" text="Activity indicator" cssClass="enabled" />
                        <Button tap="maps" text="Maps" cssClass="construction" />
                        <Button tap="navigatorView" text="Navigator View" isEnabled="false" cssClass="disabled" />
                        <Button tap="tableView" text="Table View" cssClass="enabled" />
                        <Button tap="datePicker" text="Date Picker" cssClass="enabled" />
                        <Button tap="toolbar" text="Toolbar" cssClass="enabled" />
                        <Button tap="searchbar" text="Search Bar" cssClass="enabled" />
                        <Button tap="activityViewController" text="Activity View Controller" isEnabled="false" cssClass="construction" />
                        <Button tap="modalView" text="Modal View" isEnabled="false" cssClass="construction" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Architectuur">
                <TabViewItem.view>
                    <StackLayout>
                        <Button text="HealthKit" isEnabled="false" cssClass="disabled" />
                        <Button text="CoreData" isEnabled="false" cssClass="disabled" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>