<Page loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="Nativescript App"/>
    </Page.actionBar>
    <TabView id="tabView1">
        <TabView.items>
            <TabViewItem title="Home">
                <TabViewItem.view>
                    <Label text="Home" />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Sens">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="button" tap="geolocation" text="Location" />
                        <Button class="button" tap="accelerometer" text="Accelerometer" />
                        <Button class="button" tap="gyroscope" text="Gyroscope" />
                        <Button class="button" tap="magnetometer" text="Magnetometer" />
                        <Button class="button" tap="touchId" text="TouchID" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Act">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="button" tap="vibrate" text="Trilfunctie" />
                        <Button class="button" tap="bluetooth" text="Bluetooth" />
                        <Button class="button" tap="camera" text="Camera" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="UI">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="button" tap="alert" text="Alert" />
                        <Button class="button" tap="imagePicker" text="Image picker" />
                        <Button class="button" tap="activityIndicator" text="Activity indicator" />
                        <Button class="button" tap="maps" text="Maps" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Arch">
                <TabViewItem.view>
                    <StackLayout>
                        <Label text="Architectuur volgt nog" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>