<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="Nativescript App" class="actionBar"/>
    </Page.actionBar>
    <TabView id="tabView1">
        <TabView.items>
            <TabViewItem title="Home" class="tabViewItem">
                <TabViewItem.view class="tabViewItem">
                    <Label text="Home" class="tabViewItem" />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Sens">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="button" tap="geolocation" text="Location" />
                        <Button class="button" tap="accelerometer" text="Accelerometer" />
                        <Button class="button" tap="gyroscope" text="Gyroscope" />
                        <Button class="button" tap="magnetometer" text="Magnetometer" />
                        <Button class="button" tap="touchId" text="TouchID" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Act">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="button" tap="vibrate" text="Trilfunctie" />
                        <Button class="button" tap="bluetooth" text="Bluetooth" />
                        <Button class="button" tap="camera" text="Camera" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="UI">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="button" tap="alert" text="Alert" />
                        <Button class="button" tap="imagePicker" text="Image picker" />
                        <Button class="button" tap="activityIndicator" text="Activity indicator" />
                        <Button class="button" tap="maps" text="Maps" />
                        <Button class="button" tap="listView" text="List view" />
                        <Button class="button" tap="textView" text="Text view" />
                        <button class="button" tap="htmlView" text="Html view" />
                        <Button class="button" tap="webView" text="Web view" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Arch">
                <TabViewItem.view>
                    <StackLayout>
                        <Label text="Architectuur volgt nog" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>